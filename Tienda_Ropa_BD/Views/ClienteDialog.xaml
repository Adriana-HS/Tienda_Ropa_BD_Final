<Window x:Class="TiendaRopaPOS.Views.ClienteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cliente" Height="350" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="350" MinWidth="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Datos del Cliente" 
                  FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <TextBlock Grid.Row="1" Text="Nombre:" Margin="0,0,0,5"/>
        <TextBox x:Name="TxtNombre" Grid.Row="2" 
                Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="3" Text="Apellido:" Margin="0,0,0,5"/>
        <TextBox x:Name="TxtApellido" Grid.Row="4" 
                Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="5" Text="Email:" Margin="0,0,0,5"/>
        <TextBox x:Name="TxtEmail" Grid.Row="6" 
                Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="7" Text="TelÃ©fono:" Margin="0,0,0,5"/>
        <TextBox x:Name="TxtTelefono" Grid.Row="8" 
                Style="{StaticResource ModernTextBox}" Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="10" Orientation="Horizontal" 
                   HorizontalAlignment="Right">
            <Button Content="Guardar" Style="{StaticResource SuccessButton}" 
                   Click="BtnGuardar_Click" Width="100" Margin="0,0,10,0"/>
            <Button Content="Cancelar" Style="{StaticResource DangerButton}" 
                   Click="BtnCancelar_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>

