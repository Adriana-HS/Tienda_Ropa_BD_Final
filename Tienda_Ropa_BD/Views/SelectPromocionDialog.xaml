<Window x:Class="TiendaRopaPOS.Views.SelectPromocionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seleccionar Promoción" Height="300" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        MinHeight="250" MinWidth="380">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Seleccione la promoción a desactivar:" Margin="0,0,0,10"/>

        <ComboBox x:Name="CboPromociones" Grid.Row="1" Margin="0,0,0,10"
                  DisplayMemberPath="Value" SelectedValuePath="Key"
                  IsEnabled="True"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="BtnAceptar" Content="Aceptar" Width="80" Margin="0,0,10,0" IsDefault="True" Click="BtnAceptar_Click"/>
            <Button x:Name="BtnCancelar" Content="Cancelar" Width="80" IsCancel="True" Click="BtnCancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>
