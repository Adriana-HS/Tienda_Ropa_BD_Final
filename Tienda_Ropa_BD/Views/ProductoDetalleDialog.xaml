<Window x:Class="TiendaRopaPOS.Views.ProductoDetalleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalle del Producto" Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="550" MinWidth="450">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Información del Producto" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <TextBlock Grid.Row="1" Text="ID:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock x:Name="TxtId" Grid.Row="2" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="3" Text="Nombre:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock x:Name="TxtNombre" Grid.Row="4" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="5" Text="Color:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock x:Name="TxtColor" Grid.Row="6" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="7" Text="Talla:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock x:Name="TxtTalla" Grid.Row="8" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="9" Text="Descripción:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock x:Name="TxtDescripcion" Grid.Row="10" TextWrapping="Wrap" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="11" Text="Categoría:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock x:Name="TxtCategoria" Grid.Row="12" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="13" Text="Subcategoría:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock x:Name="TxtSubcategoria" Grid.Row="14" Margin="0,0,0,15"/>
        
        <Grid Grid.Row="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Precio Base:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock x:Name="TxtPrecioBase" Grid.Row="1" Grid.Column="0" Margin="0,0,0,15"/>
            
            <TextBlock Grid.Row="0" Grid.Column="1" Text="Precio Venta:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock x:Name="TxtPrecioVenta" Grid.Row="1" Grid.Column="1" Margin="0,0,0,15"/>
            
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Stock Actual:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock x:Name="TxtStock" Grid.Row="3" Grid.Column="0" Margin="0,0,0,15"/>
        </Grid>
        
        <Button Grid.Row="16" Content="Cerrar" Style="{StaticResource PrimaryButton}" 
               Click="BtnCerrar_Click" Width="100" HorizontalAlignment="Right" Margin="0,10,0,0"/>
    </Grid>
</Window>