<Window x:Class="TiendaRopaPOS.Views.FacturaDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Factura" Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="450" MinWidth="600">
    <Grid x:Name="RootGrid" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="FACTURA" 
                  FontSize="24" FontWeight="Bold" 
                  HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <!-- Cliente Info -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Cliente:" FontWeight="Bold"/>
                <TextBlock x:Name="TxtCliente"/>
                <TextBlock Text="Fecha:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBlock x:Name="TxtFecha"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                <TextBlock Text="Pedido #:" FontWeight="Bold"/>
                <TextBlock x:Name="TxtIdPedido"/>
            </StackPanel>
        </Grid>
        
        <!-- Items -->
        <DataGrid x:Name="DgItems" Grid.Row="2" 
                 Style="{StaticResource ModernDataGrid}"
                 IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Producto" Binding="{Binding NombreProducto}" Width="*"/>
                <DataGridTextColumn Header="Color" Binding="{Binding Color}" Width="80" />
                <DataGridTextColumn Header="Talla" Binding="{Binding Talla}" Width="60" />
                <DataGridTextColumn Header="Cant." Binding="{Binding Cantidad}" Width="60"/>
                <DataGridTextColumn Header="Precio Unit." Binding="{Binding PrecioUnitario, StringFormat=C2}" Width="100"/>
                <DataGridTextColumn Header="Desc." Binding="{Binding Descuento, StringFormat=C2}" Width="80"/>
                <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=C2}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Totales -->
        <Border Grid.Row="3" BorderBrush="#BDC3C7" BorderThickness="0,1,0,0" 
               Padding="0,15,0,0" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Subtotal:" FontWeight="Bold"/>
                <TextBlock x:Name="TxtSubtotal" Grid.Row="0" Grid.Column="1" 
                          FontWeight="Bold" Margin="20,0,0,5"/>
                
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Descuento Total:" FontWeight="Bold"/>
                <TextBlock x:Name="TxtDescuento" Grid.Row="1" Grid.Column="1" 
                          FontWeight="Bold" Margin="20,0,0,5"/>
                
                <TextBlock Grid.Row="2" Grid.Column="0" Text="TOTAL:" 
                          FontSize="18" FontWeight="Bold"/>
                <TextBlock x:Name="TxtTotal" Grid.Row="2" Grid.Column="1" 
                          FontSize="18" FontWeight="Bold" Margin="20,0,0,0"/>
            </Grid>
        </Border>
        
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Imprimir" Style="{StaticResource SuccessButton}"
                   Click="BtnImprimir_Click" Width="120" Margin="0,0,10,0"/>
            <Button Content="Cerrar" Style="{StaticResource PrimaryButton}" 
                   Click="BtnCerrar_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>

