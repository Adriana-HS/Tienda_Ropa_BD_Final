<Window x:Class="TiendaRopaPOS.Views.ProductoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuevo Producto" Height="550" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinHeight="450" MinWidth="450">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Nuevo Producto" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <TextBlock Grid.Row="1" Text="Nombre:" Margin="0,0,0,5"/>
        <TextBox x:Name="TxtNombre" Grid.Row="2" 
                 Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="3" Text="Descripción:" Margin="0,0,0,5"/>
        <TextBox x:Name="TxtDescripcion" Grid.Row="4" 
                 Style="{StaticResource ModernTextBox}" 
                 TextWrapping="Wrap" AcceptsReturn="True" 
                 Height="60" Margin="0,0,0,15"/>
        
        <Grid Grid.Row="5" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Precio Base:" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtPrecioBase" Grid.Row="1" Grid.Column="0" 
                     Style="{StaticResource ModernTextBox}" Margin="0,0,10,0"/>
            
            <TextBlock Grid.Row="0" Grid.Column="1" Text="Precio Venta:" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtPrecioVenta" Grid.Row="1" Grid.Column="1" 
                     Style="{StaticResource ModernTextBox}"/>
        </Grid>
        
        <Grid Grid.Row="6" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Color:" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtColor" Grid.Row="1" Grid.Column="0" 
                     Style="{StaticResource ModernTextBox}" Margin="0,0,10,0"/>
            
            <TextBlock Grid.Row="0" Grid.Column="1" Text="Talla:" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtTalla" Grid.Row="1" Grid.Column="1" 
                     Style="{StaticResource ModernTextBox}"/>
        </Grid>
        
        <TextBlock Grid.Row="7" Text="Subcategoría:" Margin="0,0,0,5"/>
        <ComboBox x:Name="CmbSubcategoria" Grid.Row="8" 
                 DisplayMemberPath="Nombre"
                 SelectedValuePath="IdSubcategoria"
                 Style="{StaticResource ModernComboBox}" 
                 Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="12" Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Guardar" Style="{StaticResource SuccessButton}" 
                    Click="BtnGuardar_Click" Width="100" Margin="0,0,10,0"/>
            <Button Content="Cancelar" Style="{StaticResource DangerButton}" 
                    Click="BtnCancelar_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>