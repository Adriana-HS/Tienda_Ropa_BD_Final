<Window x:Class="TiendaRopaPOS.Views.StockDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajustar Stock" Height="300" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="280" MinWidth="350">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Ajustar Stock del Producto" 
                  FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <TextBlock x:Name="TxtProductoNombre" Grid.Row="1" 
                  FontSize="14" Margin="0,0,0,10"/>
        
        <TextBlock x:Name="TxtStockActual" Grid.Row="2" 
                  FontSize="12" Margin="0,0,0,20"/>
        
        <TextBlock Grid.Row="3" Text="Cantidad:" Margin="0,0,0,5"/>
        <TextBox x:Name="TxtCantidad" Grid.Row="4" 
                Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>
        
        <StackPanel Grid.Row="5" Orientation="Horizontal" 
                   HorizontalAlignment="Center" Margin="0,0,0,20">
            <RadioButton x:Name="RbEntrada" Content="Entrada (+)" 
                        IsChecked="True" Margin="0,0,20,0"/>
            <RadioButton x:Name="RbSalida" Content="Salida (-)"/>
        </StackPanel>
        
        <StackPanel Grid.Row="6" Orientation="Horizontal" 
                   HorizontalAlignment="Right">
            <Button Content="Guardar" Style="{StaticResource SuccessButton}" 
                   Click="BtnGuardar_Click" Width="100" Margin="0,0,10,0"/>
            <Button Content="Cancelar" Style="{StaticResource DangerButton}" 
                   Click="BtnCancelar_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>

