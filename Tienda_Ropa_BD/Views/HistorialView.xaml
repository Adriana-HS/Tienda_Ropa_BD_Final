<UserControl x:Class="TiendaRopaPOS.Views.HistorialView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="MÃ“DULO DE HISTORIAL - MIS PEDIDOS" 
                  FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <!-- Cliente Selection -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="Cliente:" 
                      VerticalAlignment="Center" Margin="0,0,10,0"/>
            
            <ComboBox x:Name="CmbClientes" Grid.Column="1" 
                     DisplayMemberPath="NombreCompleto"
                     SelectionChanged="CmbClientes_SelectionChanged"
                     Margin="0,0,10,0"/>
            
            <Button x:Name="BtnCargarHistorial" Content="ðŸ“‹ Cargar Historial" 
                   Style="{StaticResource PrimaryButton}"
                   Click="BtnCargarHistorial_Click" 
                   Grid.Column="2" Width="150" IsEnabled="False"/>
        </Grid>
        
        <!-- Pedidos Grid -->
        <DataGrid x:Name="DgPedidos" Grid.Row="2" 
                 Style="{StaticResource ModernDataGrid}"
                 SelectionChanged="DgPedidos_SelectionChanged"
                 MouseDoubleClick="DgPedidos_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID Pedido" Binding="{Binding IdPedido}" Width="80"/>
                <DataGridTextColumn Header="Cliente" Binding="{Binding NombreCliente}" Width="200"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding FechaPedido, StringFormat=dd/MM/yyyy HH:mm}" Width="150"/>
                <DataGridTextColumn Header="Estado" Binding="{Binding EstadoPedido}" Width="120"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C2}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                   VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                   Margin="0,0,0,10">
            <Button x:Name="BtnEliminarPedido" Content="ðŸ—‘ï¸ Eliminar Pedido" 
                   Style="{StaticResource DangerButton}"
                   Click="BtnEliminarPedido_Click" 
                   Width="150" IsEnabled="False" Margin="0,0,10,0"/>
            <Button x:Name="BtnActualizarEstado" Content="ðŸ”„ Actualizar Estado" 
                   Style="{StaticResource PrimaryButton}"
                   Click="BtnActualizarEstado_Click" 
                   Width="170" IsEnabled="False" Margin="0,0,10,0"/>
            <Button x:Name="BtnVerFactura" Content="ðŸ‘ï¸ Ver/Reimprimir Factura" 
                   Style="{StaticResource PrimaryButton}"
                   Click="BtnVerFactura_Click" 
                   Width="200" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</UserControl>

